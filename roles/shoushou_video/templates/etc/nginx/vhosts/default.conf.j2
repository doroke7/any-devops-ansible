#jinja2: lstrip_blocks: True

server {
    listen       {{ VHOST['HTTP_PORT'] | default(80) }};
    listen       [::]:{{ VHOST['HTTP_PORT'] | default(80) }};
    server_name  {{ VHOST['SERVER_NAME'] }};
    {% if VHOST['ROOT'] is defined %}
    root         {{ VHOST['ROOT'] }};
    {% endif %}



    charset utf-8;
    server_tokens off;
	
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";
    add_header 'Access-Control-Allow-Origin' '*';
    add_header 'Access-Control-Allow-Credentials' 'true';
    add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS';
    add_header 'Access-Control-Allow-Headers' 'DNT,X-CustomHeader,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type';
	
  


    
    index        {{ VHOST['INDEX'] | default('index.html index.htm') }}; 

    
    # Load configuration files for the default server block.
	
	
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }
	
    error_page 404 /index.php;

    location ~* \.(mp4|avi|wmv|rm|rmvb|mkv|mp3|wma|wav|aac|txt|pdf|doc|docx|xls|xlsx|ppt|pptx|zip|rar)(\?.+)?$ {
        max_ranges 0;
    }

    location ~* \.(ico|bmp|bmp4|css|js|gif|jpe?g|png|ogg|ogv|svg|svgz|eot|otf|woff)(\?.+)?$ {
        expires max;
        log_not_found off;
    }
    

    location / {

        if (!-e $request_filename) {
            rewrite  "^/admin/public/(.*)$"  /admin/public/index.php/$1  last;
            rewrite  "^/mapi/public/(.*)$"  /mapi/public/index.php/$1  last;
            rewrite  "^/agent/public/(.*)$"  /agent/public/index.php/$1  last;
            rewrite  "^/share/([a-z0-9_]{1,32})$" /agent/public/admin/download/index?agent=$1 last;
            break;
        }

        # rewrite  "^/(.*).html$"  /$1/index.html  last;
        # rewrite  "^/((.*\/)+)(.*).html$"  /$1/$2/index.html  last;

    }


    location ~ \.php(.*)$ {
        include conf.d/php{{ VHOST['PHP'] | default(7.3) | regex_replace('([0-9]+).([0-9]+)', '\\1\\2') }}.conf;
    }


}
